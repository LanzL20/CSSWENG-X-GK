@model Event

@{
    ViewData["Title"] = "Welcome to Gawad Kalinga";
}

<form method="post" asp-action="AddEvent" id="addevent" class="edit-one-event-card" enctype="multipart/form-data">
    <div class="edit-one-event-top">
        <div class="profile-textbox">
            <label>Title</label>
            <input asp-for="EventName" class="form-control profile-forminput">
        </div>
    </div>

    <div class="edit-one-event-body">
        <img src="https://files.catbox.moe/bpyplc.png" alt="Current Event Image" id="current-image" style="padding-top: 0;">

        
        <div class="edit-one-event-textbox">
            <label>Upload Image</label>
            <input type="file" id="event-image" name="EventImage" class="form-control edit-one-event-forminput" accept="image/*">
        </div>

        <div class="edit-one-event-textbox">
            <label>Preview Description</label>
            <input asp-for="EventShortDesc" class="form-control edit-one-event-forminput">
        </div>

        <div class="edit-one-event-textbox">
            <label>Full Description</label>
            <textarea asp-for="EventLongDesc" class="form-control edit-one-event-forminput"></textarea>
        </div>

        <div class="edit-one-event-container">
            <div class="edit-one-event-textbox">
                <label>Date & Time: @ViewBag.EventDate</label>
                <input asp-for="EventDate" class="form-control edit-one-event-forminput">
            </div>
            <div class="edit-one-event-textbox">
                <label>Location</label>
                <input asp-for="EventLocation" class="form-control edit-one-event-forminput">
            </div>
        </div>

        <div class="edit-one-event-container">
            <p><strong>Organizers:</strong></p>
            <div class="edit-one-event-contact">
                <div>
                    <div class="edit-one-event-contact-textbox">
                        <label>Name</label>
                        <input class="form-control edit-one-event-contact-forminput" value="@ViewBag.OrganizerName">
                    </div>
                    <div class="edit-one-event-contact-textbox">
                        <label>Contact Number</label>
                        <input class="form-control edit-one-event-contact-forminput" value="@ViewBag.OrganizerPhoneNumber">
                    </div>
                    <div class="edit-one-event-contact-textbox">
                        <label>Email Address</label>
                        <input class="form-control edit-one-event-contact-forminput" value="@ViewBag.OrganizerEmail">
                    </div>
                </div>
                <div class="edit-one-event-add-contact">
                    <span class="material-symbols-outlined">add_box</span>
                </div>
            </div>
        </div>
        <div class="edit-one-event-button">
            <a href="AllEvents" class="edit-one-event-discard-button">Cancel</a>
            <button type="submit" class="edit-one-event-save-button">Add Event</button>
        </div>

    </div>
</form>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    const imageUpload = document.getElementById('event-image');
    const currentImage = document.getElementById('current-image');

    imageUpload.addEventListener('change', function () {
        const file = imageUpload.files[0];

        // Show preview if an image file is selected
        if (file) {
            const reader = new FileReader();

            reader.onload = function (e) {
                currentImage.src = e.target.result;
                currentImage.style.display = 'block';
            };

            reader.readAsDataURL(file);
        } else {
            currentImage.src = 'https://files.catbox.moe/bpyplc.png'; // Show the current image
        }
    });
</script>