<div class="list-card">
    <div class="list-top">
        <div>
            <div class="list-title">
                @ViewBag.EventInfo.EventName
            </div>
        </div>
        <a asp-controller="Events" asp-action="OneEvent" class="list-back">
            <- Back to Details
        </a>
    </div>
    <div class="list-scan">
        <a asp-controller="Scan" asp-action="Scan">Record Attendance</a>
    </div>
    <div class="list-body-container">
        @if (ViewBag.VolunteersInfo != null && ViewBag.VolunteersInfo.Count > 0)
        {
        <h2>List of Volunteers Attending the Event:</h2>
        <div class="list-body">
            @foreach (var volunteer in ViewBag.VolunteersInfo)
                {
            <div class="list-volunteer">
                @volunteer.FirstName @volunteer.LastName
            </div>
            <div class="list-volunteer">
                @volunteer.VolunteerID
            </div>
                }
        </div>
        }
    </div>
</div>
