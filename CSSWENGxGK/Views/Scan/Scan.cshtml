@{
    ViewData["Title"] = "Welcome to Gawad Kalinga";
}

<div class="scan-card">
    <div class="scan-top">
        <div>
            <div class="scan-title">
                Record Attendance
            </div>
        </div>
        <a asp-controller="Events" asp-action="VolunteerList" class="scan-back">
            <- Back to List
        </a>
    </div>

    <video class="scan-camera" id="qr-video" style="transform: scaleX(1) !important;"></video>

    <form id="verifyVolunteerForm" method="post" asp-controller="Volunteer" asp-action="VerifyVolunteerID">
        <input class="scan-volunteer-id" name="Vol_ID" type="text" placeholder="Volunteer ID">
        <div class="scan-button-container">
            <button type="submit" class="scan-button">Check Volunteer ID</button>
        </div>
    </form>

    <div class="scan-info-container">
        <div class="scan-left-info-container">
            <div class="scan-left-text">
                <strong>Volunteer Name:</strong>
            </div>
            <div class="scan-left-text">
                <strong>Volunteer ID:</strong>
            </div>
        </div>
        <div class="scan-right-info-container">
            <div class="scan-left-text" id="Full_name">
                Last, First
            </div>
            <div class="scan-left-text" id="Volunteer_ID">
                12345678
            </div>
        </div>
    </div>

    <div>
        <p class="scan-successful">Volunteer Successfully Verified!</p>
    </div>

    <div>
        <p class="scan-failed">Volunteer Not Found.</p>
    </div>

    <!-- Include necessary libraries -->
    <script src="https://rawgit.com/sitepoint-editors/jsqrcode/master/dist/jsqrcode.js"></script>
    <script src="https://rawgit.com/sitepoint-editors/jsqrcode/master/src/qr_packed.js"></script>
    <script src="https://rawgit.com/schmich/instascan-builds/master/instascan.min.js"></script>

    <script>
        // Get a reference to the video element
        const videoElement = document.getElementById('qr-video');

        // Initialize the QR code scanner
        const scanner = new Instascan.Scanner({ video: videoElement });

        // Listen for the "scan" event to capture the QR code data
        scanner.addListener('scan', function (content) {
            // Check if the scanned content is a valid ID
            document.querySelector('.scan-volunteer-id').value = content;
        });

        // Start the QR code scanner
        Instascan.Camera.getCameras().then(function (cameras) {
            if (cameras.length > 0) {
                scanner.start(cameras[0]);
            } else {
                console.error('No cameras found.');
            }
        });

        document.getElementById("verifyVolunteerForm").addEventListener("submit", function (e) {
            e.preventDefault(); // Prevent the default form submission behavior
            const volunteerID = document.querySelector('.scan-volunteer-id').value;

            fetch("/VerifyVolunteerID", {
                method: "POST",
                body: JSON.stringify({ Vol_ID: volunteerID }),
                headers: {
                    "Content-Type": "application/json",
                },
            })
            .then((response) => response.json())
            .then((data) => {
                if (data.found) {
                    // Update the view with the received data
                    document.getElementById("Full_name").innerHTML = data.lastName + ", " + data.firstName;
                    document.getElementById("Volunteer_ID").innerHTML = data.volunteerID;
                }
            })
            .catch((error) => {
                console.error("Error:", error);
            });
        });
    </script>
</div>
